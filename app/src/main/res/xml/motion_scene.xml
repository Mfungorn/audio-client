<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">
    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end"
        motion:duration="3000"
        motion:motionInterpolator="linear">
        <OnSwipe motion:dragDirection="dragDown" />
    </Transition>
    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            motion:progress="0"
            android:alpha="0"
            motion:layout_constraintBottom_toTopOf="@id/image_guideline"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"></Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/back_guideline"
            motion:layout_constraintGuide_percent="0.3"></Constraint>
        <Constraint
            android:id="@+id/image_guideline"
            motion:layout_constraintGuide_percent="0.35"></Constraint>
        <Constraint
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            motion:progress="1"
            android:alpha="1"
            motion:layout_constraintBottom_toTopOf="@id/image_guideline"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"></Constraint>
    </ConstraintSet>
</MotionScene>